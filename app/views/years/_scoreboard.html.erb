<h4>Scoreboard</h4>
<table class="table table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Score</th>
      <th>Gold</th>
      <th>Silver</th>
    </tr>
  </thead>
  <tbody>
    <% @year.participants.each.with_index do |p, i| %>
      <tr>
        <td><strong><%= i + 1 %></strong></td>
        <td>
            <img src="<%= p.photo_url %>" class="inline-avatar rounded">
            <%= p.username %>
        </td>
        <td><%= p.score %></td>
        <td><%= p.gold_stars.count %></td>
        <td><%= p.silver_stars.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>
